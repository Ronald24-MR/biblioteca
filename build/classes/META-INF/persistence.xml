<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="bibliotecPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>Entitdades.Departamento</class>
    <class>Entitdades.TipoPago</class>
    <class>Entitdades.RegistroPrestamo</class>
    <class>Entitdades.Ciudad</class>
    <class>Entitdades.Registro</class>
    <class>Entitdades.Vigencia</class>
    <class>Entitdades.Municipio</class>
    <class>Entitdades.RegistroRegreso</class>
    <class>Entitdades.Mes</class>
    <class>Entitdades.Libros</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/bibliotec?zeroDateTimeBehavior=convertToNull"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value=""/>
    </properties>
  </persistence-unit>
</persistence>
